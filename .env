# Obstacle Detection Configuration for Indoor Navigation
# More conservative parameters for indoor environments with many objects

# Detection Thresholds
OBSTACLE_THRESHOLD=0.4
OBSTACLE_MIN_CONFIDENCE=0.45
OBSTACLE_HYSTERESIS=0.12

# Temporal Stability
OBSTACLE_FRAMES=12
OBSTACLE_SMOOTHING_WINDOW=6

# Movement Detection
OBSTACLE_MIN_SLOPE=0.008
OBSTACLE_SUDDEN_DELTA=0.15
OBSTACLE_ALLOW_SIZE_ONLY=false

# Haptic Feedback
OBSTACLE_SPEECH_CONFIDENCE=0.8
OBSTACLE_HAPTIC_REPEAT_MS=2000

# Performance Settings
DETECTION_COOLDOWN_MS=150
